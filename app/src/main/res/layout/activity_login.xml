<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CSlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/wcapp" />

            <TextView
                android:id="@+id/resultapii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center" />

            <EditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="60dp"

                android:layout_marginBottom="30dp"
                android:background="@drawable/rectangle"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/username"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/rectangle"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/mot_de_passe"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/Connexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="30dp"
                android:background="@drawable/round_btn"
                android:backgroundTint="@color/filled"
                android:text="@string/connexion"
                app:icon="?android:attr/fingerprintAuthDrawable"
                app:iconGravity="end"
                tools:ignore="NewApi" />

            <Button
                android:id="@+id/sansconnexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_btn"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/continuer_sans_connexion"
                app:iconGravity="end" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>